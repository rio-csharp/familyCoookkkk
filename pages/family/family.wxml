<view class="container" wx:if="{{family}}">
  <view class="card">
    <view class="section-title">家庭信息</view>
    <input class="input" data-f="name" value="{{name}}" bindinput="onInput" />
    <button size="mini" class="btn-light" bindtap="saveName">保存家庭名称</button>
    <view class="meta">邀请码：{{family.inviteCode}}</view>
  </view>
  <view class="card">
    <view class="section-title">成员管理</view>
    <view wx:for="{{family.members}}" wx:key="id" class="member-row">{{item.name}}（{{item.role}}）</view>
    <input class="input" data-f="memberName" value="{{memberName}}" bindinput="onInput" placeholder="新增成员姓名" />
    <button class="btn-primary" bindtap="addMember">添加成员</button>
  </view>
</view>
