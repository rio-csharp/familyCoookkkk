page { background: #fff7f1; font-size: 28rpx; color: #40352d; }
.container { padding: 24rpx; }
.card { background: #fff; border-radius: 20rpx; padding: 24rpx; margin-bottom: 20rpx; box-shadow: 0 8rpx 20rpx rgba(232, 118, 38, 0.08); }
.title { font-size: 36rpx; font-weight: 700; color: #8a4b20; }
.section-title { font-size: 30rpx; font-weight: 600; margin: 8rpx 0 16rpx; color: #7a4521; }
.subtle { color: #ab8a72; font-size: 24rpx; }
.input { min-height: 74rpx; background: #fff3e8; border: 1rpx solid #ffd8b5; border-radius: 14rpx; padding: 0 18rpx; margin-bottom: 12rpx; }
.textarea { width: 100%; min-height: 150rpx; background: #fff3e8; border: 1rpx solid #ffd8b5; border-radius: 14rpx; padding: 14rpx 18rpx; box-sizing: border-box; margin-bottom: 12rpx; }
.tag { display: inline-block; background: #fff0df; color: #ad5a20; border-radius: 999rpx; padding: 6rpx 14rpx; margin-right: 8rpx; font-size: 22rpx; }
.meta { color: #ab8a72; font-size: 24rpx; margin-top: 8rpx; }
.btn-row { display: flex; flex-wrap: wrap; gap: 10rpx; }
.btn-primary { background: #ff8a3d !important; color: #fff !important; border-radius: 12rpx; }
.btn-light { background: #fff1e4 !important; color: #c76621 !important; border: 1rpx solid #ffd5b0; border-radius: 12rpx; }
.btn-primary[disabled],
.btn-light[disabled] {
  opacity: 0.55;
}
.state-card {
  text-align: center;
  color: #8a6042;
}
.error-text {
  color: #c44c30;
  margin-bottom: 10rpx;
}
